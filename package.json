{
  "name": "web-components",
  "version": "1.0.5",
  "description": "LitElement starter built with webpack and modern tools",
  "main": "src/app.js",
  "author": "Andrea Malvetta",
  "license": "MIT",
  "private": true,
  "homepage": "https://andreamalvetta.github.io/web-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/andreamalvetta/web-components.git"
  },
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "lazysizes": "^5.0.0-beta1",
    "lit-element": "^2.1.0",
    "workbox-window": "^4.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@open-wc/semantic-dom-diff": "^0.10.6",
    "@open-wc/testing": "^0.11.6",
    "@open-wc/testing-karma": "^1.1.1",
    "@storybook/addon-actions": "^5.0.11",
    "@storybook/polymer": "^5.0.11",
    "autoprefixer": "^9.5.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-template-html-minifier": "^2.3.0",
    "babel-preset-minify": "^0.5.0",
    "clean-webpack-plugin": "^2.0.1",
    "compression-webpack-plugin": "^2.0.0",
    "copy-webpack-plugin": "^5.0.3",
    "critters-webpack-plugin": "^2.3.0",
    "css-loader": "^2.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.2.0",
    "file-loader": "^3.0.1",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^2.2.0",
    "karma": "^4.1.0",
    "karma-mocha-snapshot": "^0.2.1",
    "karma-snapshot": "^0.6.0",
    "karma-webpack": "^4.0.0-rc.6",
    "lint-staged": "^8.1.5",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^4.12.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "polymer-webpack-loader": "^2.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.17.0",
    "sass-loader": "^7.1.0",
    "script-ext-html-webpack-plugin": "^2.1.3",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.1",
    "stylelint-config-rational-order": "^0.1.2",
    "terser-webpack-plugin": "^1.2.3",
    "ts-loader": "^5.4.5",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5",
    "url-loader": "^1.1.2",
    "webpack": "^4.30.0",
    "webpack-babel-multi-target-plugin": "^2.3.0-alpha.1",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1",
    "workbox-webpack-plugin": "^4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.ts": [
        "tslint --fix",
        "prettier --write",
        "git add"
      ],
      "*.{css,scss,sass}": [
        "stylelint --fix",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "docs/*"
    ]
  },
  "scripts": {
    "build": "node src/utils/generate-helpers.js && webpack --env production --config config/webpack.config.prod.js",
    "start": "node src/utils/generate-helpers.js && webpack-dev-server --env development --config config/webpack.config.dev.js --open",
    "test": "karma start --legacy --coverage",
    "test:watch": "karma start --legacy --auto-watch=true --single-run=false",
    "test:update": "karma start --update-snapshots --prune-snapshots",
    "storybook": "start-storybook -p 9001",
    "storybook:build": "build-storybook -o _site -s storybook-static",
    "docs": "typedoc src",
    "docs:deploy": "gh-pages -d docs -t"
  }
}
