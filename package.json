  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css,scss,sass}": [
      "stylelint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "build": "node src/utils/generate-helpers.js && webpack --env production --config config/webpack.config.prod.js",
    "start": "node src/utils/generate-helpers.js && webpack-dev-server --env development --config config/webpack.config.dev.js",
    "deploy": "gh-pages -d dist"
