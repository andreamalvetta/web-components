{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "experimentalDecorators": true
  },
  "typedocOptions": {
    "mode": "modules",
    "includeDeclarations": true,
    "disableOutputCheck": true,
    "exclude": "src/app*,src/styles/*,src/components/**/index*,src/**/*spec*,src/**/*stories*",
    "excludeExternals": true,
    "out": "docs"
  }
}
